  "content": [
    {
      "type": "header",
      "level": 1,
      "text": "Clinical Setting"
    },
    {
      "type": "list",
      "items": [
        "Neonatal pleural empyema (Age 0-1 month)."
      ]
    },
    {
      "type": "header",
      "level": 1,
      "text": "Etiologies"
    },
    {
      "type": "list",
      "items": [
        "Staph. aureus (MSSA and MRSA)",
        "Occasionally Group B strep",
        "Rarely Streptococcus pneumoniae, Group A Strep",
        "Consider iatrogenic chylous effusions in patients with heart surgery or mediastinitis in patients with tracheo-esophageal fistula (TEF)"
      ]
    },
    {
      "type": "header",
      "level": 1,
      "text": "Primary Regimens"
    },
    {
      "type": "procedure",
      "procedureData": {
        "name": "Perform diagnostic thoracentesis; catheter or chest tube drainage for empyema."
      }
    },
    {
      "type": "nestedContent",
      "content": [
        {
          "type": "paragraph",
          "text": "Gestational age ≤34 weeks"
        },
        {
          "type": "nestedContent",
          "content": [
            {
              "type": "paragraph",
              "text": "Age 0-7 days"
            },
            {
              "type": "drugRegimen",
              "regimenData": {
                "intent": "treatment",
                "condition": "MSSA",
                "components": [
                  {
                    "drug": "Nafcillin",
                    "dose": "25 mg/kg",
                    "route": "IV",
                    "frequency": "q12h"
                  },
                  {
                    "drug": "Oxacillin",
                    "dose": "25 mg/kg",
                    "route": "IV",
                    "frequency": "q12h",
                    "connector": "or"
                  }
                ]
              }
            },
            {
              "type": "drugRegimen",
              "regimenData": {
                "intent": "treatment",
                "condition": "MRSA",
                "components": [
                  {
                    "drug": "Vancomycin",
                    "dose": "60-80 mg/kg",
                    "route": "IV",
                    "frequency": "divided 3-4 times a day"
                  }
                ],
                "notes": "to achieve preferred target AUC24 400-600 µg/mL x hr (see vancomycin AUC dosing calculator; alternative is trough of 10-15 µg/mL but AUC targeting is preferred)."
              }
            }
          ]
        },
        {
