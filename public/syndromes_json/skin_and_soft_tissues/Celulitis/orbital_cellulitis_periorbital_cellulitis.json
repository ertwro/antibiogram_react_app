              {
                "drug": "Ceftriaxone",
                "dose": "2 gm",
                "route": "IV",
                "frequency": "q24h",
                "connector": "+"
              },
              {
                "drug": "Metronidazole",
                "dose": "1 gm",
                "route": "IV",
                "frequency": "q12h"
              }
            ]
          }
        },
        {
