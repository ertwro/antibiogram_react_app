            "appliesTo": {
              "description": "With few lesions"
            },
            "components": [
              {
                "drug": "Mupirocin ointment",
                "dose": "2%",
                "route": "tid",
                "connector": "or"
              },
              {
                "drug": "Fusidic acid",
                "dose": "2% cream",
                "frequency": "x 5 days"
              }
            ]
          }
        },
        {
          "type": "drugRegimen",
          "regimenData": {
            "intent": "treatment",
            "appliesTo": {
              "description": "With few lesions"
            },
            "components": [
              {
                "drug": "Retapamulin",
                "dose": "1% ointment",
                "route": "bid",
                "frequency": "x 5 days"
              }
            ]
          }
        },
        {
          "type": "drugRegimen",
          "regimenData": {
            "intent": "treatment",
            "appliesTo": {
