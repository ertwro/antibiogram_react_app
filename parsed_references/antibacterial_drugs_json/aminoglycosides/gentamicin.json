      {
        "route": "Conventional dosing",
        "dose": "2 mg/kg IV load, then 1.7-2 mg/kg IV q8h"
      },
      {
        "route": "Extended-interval dosing",
        "dose": "7 mg/kg IV q24h (Antimicrob Agents Chemother 1995;39:650)"
      },
      {
        "route": "Gram-positive synergy",
        "dose": "1 mg/kg IV q8h"
      },
      {
        "route": "Intrathecal administration",
        "dose": "4-8 mg once daily"
      },
      {
        "route": "CAPD-related peritonitis",
