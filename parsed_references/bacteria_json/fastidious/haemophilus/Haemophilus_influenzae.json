    "clinicalProfile": {
      "summary": "Haemophilus influenzae is a frequent colonizer of the respiratory tract that can cause a wide range of diseases, from mild upper respiratory infections to severe invasive diseases like meningitis and epiglottitis. The choice of treatment regimen depends on the severity and site of infection.",
      "pathophysiologyPearls": [],
      "keySignsAndSymptoms": [
        "Fever",
        "Cough",
        "Headache",
        "Stiff neck (meningitis)",
        "Sore throat (epiglottitis)"
      ],
      "clinicalSyndromes": [
        {
          "syndromeName": "Meningitis",
          "description": "Inflammation of the membranes surrounding the brain and spinal cord."
        },
        {
          "syndromeName": "Epiglottitis/Supraglottitis",
          "description": "Inflammation of the epiglottis, which can lead to life-threatening airway obstruction."
        },
        {
          "syndromeName": "Pneumonia",
          "description": "Infection of the lungs."
        },
        {
          "syndromeName": "Bacteremia/Sepsis",
          "description": "Presence of bacteria in the bloodstream, potentially leading to a systemic inflammatory response."
        },
        {
          "syndromeName": "Acute Otitis Media",
          "description": "Infection of the middle ear."
        },
        {
          "syndromeName": "Bronchitis",
          "description": "Inflammation of the bronchial tubes."
        }
      ],
