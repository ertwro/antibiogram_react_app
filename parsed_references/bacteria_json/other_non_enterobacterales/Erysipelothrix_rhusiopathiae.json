    "clinicalProfile": {
      "summary": "Erysipelothrix rhusiopathiae is a zoonotic bacterium that causes erysipeloid, a skin infection, in humans. It can also cause more severe systemic infections like bacteremia and endocarditis, particularly in immunocompromised individuals or those with occupational exposure.",
      "pathophysiologyPearls": [
        "Infection is typically acquired through direct contact with infected animals or animal products.",
        "The organism enters the body through cuts or abrasions in the skin."
      ],
      "keySignsAndSymptoms": [
        "Violaceous, well-demarcated skin lesion with raised borders (erysipeloid)",
        "Itching and burning at the site of infection",
        "Fever and chills (in systemic disease)",
        "Joint pain",
        "Symptoms of endocarditis (e.g., new murmur, embolic phenomena)"
      ],
      "clinicalSyndromes": [
        {
          "syndromeName": "Erysipeloid",
          "description": "A localized cutaneous infection, typically on the hands, characterized by a painful, purplish-red, slowly spreading lesion."
        },
        {
          "syndromeName": "Diffuse Cutaneous Erysipeloid",
          "description": "A more widespread skin infection, often accompanied by systemic symptoms like fever."
        },
        {
          "syndromeName": "Bacteremia",
          "description": "Can occur, with or without a clear primary focus of infection."
        },
        {
          "syndromeName": "Infective Endocarditis",
          "description": "A serious complication that can occur in the setting of bacteremia."
        }
      ],
