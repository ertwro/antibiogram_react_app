                  "drugs": [
                    {
                      "drugName": "TMP-SMX",
                      "dose": "6-8 mg/kg",
                      "route": "PO",
                      "frequency": "BID",
                      "comments": "Dosed based on TMP component."
                    }
                  ]
                }
              ],
              "notes": [
                "Eradication therapy is initiated following initial IV therapy to prevent relapse."
              ]
            },
            {
