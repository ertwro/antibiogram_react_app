                    {
                      "drugName": "Amoxicillin-clavulanate",
                      "dose": "20 mg/5 mg/kg",
                      "route": "PO",
                      "frequency": "TID",
                      "comments": "Less effective than TMP-SMX. Dose may be poorly tolerated due to GI intolerance."
                    }
                  ]
