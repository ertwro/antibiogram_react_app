    "clinicalProfile": {
      "summary": "Brucellosis is a zoonotic infection caused by Brucella species, typically transmitted through unpasteurized dairy or contact with infected animals. It presents with a wide range of symptoms, from a non-specific febrile illness to focal infections like osteoarticular disease, and rarely, endocarditis.",
      "pathophysiologyPearls": [
        "Brucella is an intracellular pathogen that can survive and replicate within phagocytic cells, leading to chronic and relapsing infections."
      ],
      "keySignsAndSymptoms": [
        "Fever (in 90% of cases, often undulant)",
        "Malodorous perspiration (pathognomonic but uncommon)",
        "Arthralgia and myalgia",
        "Headache",
        "Fatigue",
        "Leukopenia and relative lymphocytosis",
        "Mild hepatitis"
      ],
      "clinicalSyndromes": [
        {
          "syndromeName": "Febrile illness",
          "description": "A non-specific presentation with fever, sweats, malaise, and anorexia."
        },
        {
          "syndromeName": "Osteoarticular disease",
          "description": "Occurs in 20-30% of cases, with sacroiliitis being a common manifestation."
        },
        {
          "syndromeName": "Neurobrucellosis",
          "description": "A rare but serious complication that can manifest as meningitis, encephalitis, or myelitis."
        },
        {
          "syndromeName": "Endocarditis",
          "description": "A rare but life-threatening complication requiring both medical and surgical intervention."
        }
      ],
      "highRiskPopulations": [
        "Farmers, veterinarians, and slaughterhouse workers",
        "Consumers of unpasteurized dairy products",
        "Laboratory personnel working with Brucella cultures"
      ],
      "transmissionVectors": [
        "Ingestion of unpasteurized dairy products",
        "Direct contact with infected animals, their tissues, or secretions"
      ],
      "prognosisNotes": [
        "Relapse rate after treatment is approximately 10%."
      ]
    },
