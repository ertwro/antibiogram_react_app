    "laboratoryProfile": {
      "testingIndications": [
        "Febrile illness with a history of exposure to unpasteurized dairy products or infected animals.",
        "Osteoarticular infection, especially sacroiliitis."
      ],
      "methodologyNotes": [
        "False negative serology can occur due to the prozone phenomenon."
      ],
      "recommendedPanel": [],
      "specialTests": [
        {
          "testName": "Serology",
          "trigger": "Clinical suspicion of brucellosis",
          "purpose": "To detect antibodies against Brucella sp. All positive rapid serologies require confirmation with Brucella sp. specific agglutination."
        },
        {
          "testName": "Bone marrow culture",
          "trigger": "High clinical suspicion with negative blood cultures",
          "purpose": "To isolate Brucella sp."
        },
        {
          "testName": "PCR",
          "trigger": "When available and certified",
          "purpose": "For sensitive and specific detection of Brucella DNA."
        }
      ],
      "reportingRules": [],
      "antimicrobialBreakpoints": []
    },
    "additionalInformation": {
      "diagnosticNotes": {
        "summary": "Diagnosis is made by a combination of clinical suspicion, serology, and culture or molecular methods.",
        "biosafetyWarning": "Inform the laboratory of possible brucellosis to lower the risk of occupational exposure (BSL-3 practices recommended for culture).",
        "methods": [
          {
            "methodName": "Serology",
            "details": "Remains a useful diagnostic tool, especially in resource-limited settings. Confirmation of positive rapid tests is necessary."
          },
          {
            "methodName": "Culture",
            "details": "Blood and bone marrow cultures can be positive, but growth is slow."
          },
          {
            "methodName": "NAAT",
            "details": "PCR and 16S rRNA gene sequencing are the most sensitive and specific methods when available."
          }
        ]
      },
      "preventionAndScreening": [
        {
          "type": "Prophylaxis",
          "details": "Post-exposure prophylaxis with Doxycycline + Rifampin for 3 weeks is recommended after laboratory exposure. If B. abortus strain RB51 is suspected, use Doxycycline alone. If Doxycycline is not tolerated or in pregnancy, use TMP-SMX with or without Rifampin.",
          "targetPopulation": "Laboratory personnel with exposure to Brucella."
        }
      ],
      "treatmentLifecycle": [
        {
          "topic": "Test of Cure",
          "details": "Antibody testing of exposed personnel via State labs or CDC at 2, 4, 6 and 24 weeks. Note the poor antibody response to B. abortus strain RB51."
        }
      ],
