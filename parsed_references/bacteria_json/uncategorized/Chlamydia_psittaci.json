    "clinicalProfile": {
      "summary": "Chlamydia psittaci is the causative agent of psittacosis (ornithosis), a zoonotic infection acquired from exposure to infected birds, particularly psittacines (parrots, cockatiels, macaws). It typically presents as atypical pneumonia.",
      "pathophysiologyPearls": [
        "The bacterium is an obligate intracellular parasite, which means it can only replicate inside host cells, leading to cell death and inflammation."
      ],
      "keySignsAndSymptoms": [
        "Fever",
        "Non-productive cough",
        "Headache",
        "Myalgia"
      ],
      "clinicalSyndromes": [
        {
          "syndromeName": "Atypical Pneumonia (Psittacosis)",
          "description": "An acute infection characterized by fever, chills, headache, myalgia, and a non-productive cough. Can rarely progress to fulminant pneumonia."
        }
      ],
      "highRiskPopulations": [
        "Bird owners (especially parrots and other psittacine birds)",
        "Poultry workers",
        "Veterinarians",
        "Pet shop employees"
      ],
      "transmissionVectors": [
        "Inhalation of aerosolized dried bird feces, urine, or respiratory secretions."
      ],
      "prognosisNotes": [
        "Fulminant pneumonia is a rare but serious complication."
      ]
    },
